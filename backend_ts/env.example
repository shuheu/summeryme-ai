# Node.js環境設定
NODE_ENV=development
LOG_LEVEL=info

# データベース設定
DATABASE_URL=mysql://user:password@localhost:3306/summeryme_dev

# Google Cloud設定
GOOGLE_CLOUD_PROJECT=your-project-id
GCP_REGION=asia-northeast1
GCP_SERVICE_NAME=backend-api
